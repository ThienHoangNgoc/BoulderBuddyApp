<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <View
        android:id="@+id/view_id"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDark2" />


    <RelativeLayout
        android:id="@+id/rLayout_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_id">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Do you really want to delete this entry?"
            android:textColor="@color/colorBlack"
            android:textSize="15dp" />

    </RelativeLayout>


    <View
        android:id="@+id/view2_id"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rLayout_id"

        android:background="@color/semiTransparent2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/view2_id"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/main_screen_delete_entry_dialog_cancel_btn_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="35dp"
            android:background="@color/transparent"
            android:text="Cancel" />

        <Button
            android:id="@+id/main_screen_delete_entry_dialog_select_btn_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="35dp"
            android:background="@color/transparent"
            android:text="Ok" />


    </RelativeLayout>


</RelativeLayout>