<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/settings_change_password_text_header_rLayout_id"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/settings_change_password_dialog_text_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="30dp"
            android:text="Fill the empty fields."
            android:textColor="@color/colorWhite"
            android:textSize="20dp"
            android:textStyle="bold" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rLayout_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/settings_change_password_text_header_rLayout_id"
        android:background="@color/appBackgroundColor">


        <RelativeLayout
            android:id="@+id/settings_change_password_old_password_rLayout_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:gravity="center">

            <EditText
                android:id="@+id/settings_change_password_dialog_old_password_edit_view_id"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:background="@color/transparent"
                android:drawablePadding="12dp"
                android:hint="Old Password"
                android:inputType="textPassword"
                android:maxLength="20"
                android:singleLine="true"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/editPasswordAndUsernameColor"
                android:textSize="25dp" />

            <Button
                android:id="@+id/settings_reset_old_password_btn_id"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/settings_change_password_dialog_old_password_edit_view_id"
                android:background="@drawable/profile_clear_username_dialog_icon_id" />

            <View
                android:layout_width="340dp"
                android:layout_height="2dp"
                android:layout_below="@id/settings_change_password_dialog_old_password_edit_view_id"
                android:background="@color/colorWhite" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/settings_change_password_new_password_rLayout_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/settings_change_password_old_password_rLayout_id"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <EditText
                android:id="@+id/settings_change_password_dialog_new_password_edit_view_id"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:background="@color/transparent"
                android:drawablePadding="12dp"
                android:hint="New Password"
                android:inputType="textPassword"
                android:maxLength="20"
                android:singleLine="true"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/editPasswordAndUsernameColor"
                android:textSize="25dp" />

            <Button
                android:id="@+id/settings_reset_new_password_btn_id"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/settings_change_password_dialog_new_password_edit_view_id"
                android:background="@drawable/profile_clear_username_dialog_icon_id" />

            <View
                android:layout_width="340dp"
                android:layout_height="2dp"
                android:layout_below="@id/settings_change_password_dialog_new_password_edit_view_id"
                android:background="@color/colorWhite" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/settings_change_password_confirm_new_password_rLayout_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/settings_change_password_new_password_rLayout_id"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <EditText
                android:id="@+id/settings_change_password_dialog_confirm_new_password_edit_view_id"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:background="@color/transparent"
                android:drawablePadding="12dp"
                android:hint="Confirm New Password"
                android:inputType="textPassword"
                android:maxLength="20"
                android:singleLine="true"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/editPasswordAndUsernameColor"
                android:textSize="25dp" />

            <Button
                android:id="@+id/settings_reset_confirm_new_password_btn_id"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/settings_change_password_dialog_confirm_new_password_edit_view_id"
                android:background="@drawable/profile_clear_username_dialog_icon_id" />

            <View
                android:layout_width="340dp"
                android:layout_height="2dp"
                android:layout_below="@id/settings_change_password_dialog_confirm_new_password_edit_view_id"
                android:background="@color/colorWhite" />

        </RelativeLayout>

        <View
            android:id="@+id/view2_id"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@id/settings_change_password_btn_rLayout_id"
            android:background="@color/colorWhite" />

        <RelativeLayout
            android:id="@+id/settings_change_password_btn_rLayout_id"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">

            <Button
                android:id="@+id/settings_change_password_dialog_cancel_btn_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="35dp"
                android:background="@color/transparent"
                android:text="Cancel"
                android:textColor="@color/colorWhite" />

            <Button
                android:id="@+id/settings_change_password_dialog_select_btn_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="35dp"
                android:background="@color/transparent"
                android:text="Ok"
                android:textColor="@color/colorWhite" />


        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>