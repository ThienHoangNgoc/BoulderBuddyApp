<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/appBackgroundColor"
    android:padding="20dp">

    <TextView
        android:id="@+id/achievement_progress_fragment_label_text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Achievement Label"
        android:textColor="@color/colorWhite"
        android:textSize="15dp" />


    <ProgressBar
        android:id="@+id/achievement_progress_fragment_progressBar_id"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/achievement_progress_fragment_label_text_id"
        android:layout_marginTop="10dp"
        android:progress="50"
        android:progressDrawable="@drawable/customprogressbar" />


    <TextView
        android:id="@+id/achievement_progress_done_status_text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:drawableRight="@drawable/achievement_done_icon"
        android:text="Done"
        android:textColor="@color/colorWhite"
        android:textSize="20dp"
        android:textStyle="bold"
        android:visibility="invisible" />

</RelativeLayout>