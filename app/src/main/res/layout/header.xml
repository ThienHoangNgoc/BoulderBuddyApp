<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="175dp"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:padding="20dp">

    <RelativeLayout
        android:id="@+id/image_and_lvl_id2"

        android:layout_width="wrap_content"
        android:layout_height="90dp">

        <RelativeLayout
            android:id="@+id/image_and_lvl_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">



            <android.support.v7.widget.CardView
                android:id="@+id/profile_image_id"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="37.5dp"
                app:cardElevation="5dp">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:baselineAlignBottom="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/photo" />




            </android.support.v7.widget.CardView>




        </RelativeLayout>

        <TextView
            android:id="@+id/lvl_id"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_corner"
            android:gravity="center"
            android:textSize="10dp"
            android:text="121"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />






    </RelativeLayout>




    <TextView
        android:id="@+id/profile_name_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_and_lvl_id2"
        android:layout_marginTop="5dp"
        android:text="Chopperman"
        android:textColor="@color/colorWhite"
        android:textSize="20dp"
        android:textStyle="bold" />


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_name_id"
        android:layout_marginTop="5dp"
        android:progress="73"
        android:progressDrawable="@drawable/customprogressbar" />


</RelativeLayout>