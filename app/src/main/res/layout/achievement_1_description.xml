<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="20dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <TextView
            android:id="@+id/achievement_1_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Achievement 1"
            android:textColor="@color/colorBlack"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/achievement_1_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/achievement_1_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:text="Complete 50 Easy Routes"
            android:textColor="@color/colorBlack"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/achievement_1_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/achievement_1_condition"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Completed: 29.08.2017"
            android:textColor="@color/colorBlack" />


    </RelativeLayout>


</android.support.v7.widget.CardView>