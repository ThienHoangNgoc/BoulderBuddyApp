<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_background1">


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/semiTransparent4">

        <ImageView
            android:id="@+id/register_dummy_image_id"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/register_app_icon_image_view_id"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@drawable/app_icon" />

        <TextView
            android:id="@+id/register_app_name_text_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/register_app_icon_image_view_id"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="BoulderBuddy"
            android:textColor="@color/colorWhite"
            android:textSize="30dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/register_username_rlayout_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/register_app_name_text_id"
            android:layout_marginTop="30dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp">

            <EditText
                android:id="@+id/register_username_edit_text_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:drawableLeft="@drawable/login_username_icon"
                android:drawablePadding="10dp"
                android:hint="Username"
                android:maxLength="20"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/hintTextColorLoginRegister"
                android:textSize="25dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/register_username_edit_text_id"
                android:background="@color/colorWhite" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/register_password_rlayout_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/register_username_rlayout_id"
            android:layout_marginTop="20dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp">

            <EditText
                android:id="@+id/register_password_edit_text_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:drawableLeft="@drawable/login_password_icon"
                android:drawablePadding="10dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/hintTextColorLoginRegister"
                android:textSize="25dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/register_password_edit_text_id"
                android:background="@color/colorWhite" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/register_confirm_password_rlayout_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/register_password_rlayout_id"
            android:layout_marginTop="20dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp">

            <EditText
                android:id="@+id/register_confirm_password_edit_text_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:drawableLeft="@drawable/login_password_icon"
                android:drawablePadding="10dp"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/hintTextColorLoginRegister"
                android:textSize="25dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/register_confirm_password_edit_text_id"
                android:background="@color/colorWhite" />


        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/register_card_view_register_btn_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/register_confirm_password_rlayout_id"
            android:layout_centerInParent="true"
            android:layout_marginTop="50dp"
            android:elevation="5dp"
            app:cardBackgroundColor="@color/transparent"
            app:cardCornerRadius="20dp">

            <Button
                android:id="@+id/register_register_btn_id"
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:background="@color/colorPrimary"
                android:text="CREATE"
                android:textColor="@color/colorWhite"
                android:textSize="15dp"
                android:textStyle="bold" />


        </android.support.v7.widget.CardView>


    </RelativeLayout>

</RelativeLayout>