<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/statistics_number_picker_dialog_text_header_id"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="Select Label"
        android:textSize="20dp"
        android:textStyle="bold" />

    <View
        android:id="@+id/view_id"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/statistics_number_picker_dialog_text_header_id"
        android:layout_marginTop="3dp"
        android:background="@color/colorBlack" />


    <RelativeLayout
        android:id="@+id/RLayout_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_id"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp">


        <TextView
            android:id="@+id/statistics_number_picker_dialog_text_label_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Label"
            android:textSize="20dp"
            android:textStyle="bold" />


        <NumberPicker
            android:id="@+id/statistics_number_picker_dialog_picker_id"
            android:layout_width="80dp"
            android:layout_height="163dp"
            android:layout_below="@id/statistics_number_picker_dialog_text_label_id"
            android:layout_marginTop="5dp"
            android:descendantFocusability="blocksDescendants">


        </NumberPicker>


    </RelativeLayout>

    <View
        android:id="@+id/view_id2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/RLayout_layout"
        android:layout_marginTop="5dp"
        android:background="@color/numberPickerDialogDividerColor" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/view_id2"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/statistics_session_chart_fragment_dialog_cancel_btn_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="35dp"
            android:background="@color/transparent"
            android:text="Cancel" />

        <Button
            android:id="@+id/statistics_session_chart_fragment_dialog_select_btn_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="35dp"
            android:background="@color/transparent"
            android:text="Select" />


    </RelativeLayout>


</RelativeLayout>