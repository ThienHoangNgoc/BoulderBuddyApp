<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item_main_rLayout_id"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@color/entryItemBackgroundColor">

    <RelativeLayout
        android:id="@+id/text_rLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <RatingBar
            android:id="@+id/ratingBar_inMain_id"
            style="@style/Base.Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:rating="2.5"
            android:theme="@style/RatingBar2" />

        <TextView
            android:id="@+id/entry_number_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/ratingBar_inMain_id"
            android:layout_below="@id/ratingBar_inMain_id"
            android:text="Eintrag #1"
            android:textColor="@color/colorWhite"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/hall_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/ratingBar_inMain_id"
            android:layout_below="@id/entry_number_id"
            android:text="SÃ¼dbloc"
            android:textColor="@color/colorWhite"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/date_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/ratingBar_inMain_id"
            android:layout_below="@+id/hall_id"
            android:text="24. Mai 2017"
            android:textColor="@color/colorWhite"
            android:textSize="25dp" />


    </RelativeLayout>


    <android.support.v7.widget.CardView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/semiTransparent3"
        app:cardCornerRadius="24dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/delete_btn_inMain_id"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerInParent="true"
                android:background="@drawable/trash_can_delete_icon" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>