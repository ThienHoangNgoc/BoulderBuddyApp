<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@color/semiTransparent4">

    <RelativeLayout
        android:id="@+id/list_item_main_rLayout_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/semiTransparentItemList">

        <RelativeLayout
            android:id="@+id/text_rLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/entry_number_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="270dp"
                android:text="10"
                android:textColor="@color/itemListTextColor2"
                android:textSize="50dp" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="130dp">

                <TextView
                    android:id="@+id/hall_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/date_id"
                    android:text="Bouldergarten"
                    android:textColor="@color/itemListTextColor1"
                    android:textSize="25dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/date_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24. Mai 2017"
                    android:textColor="@color/itemListTextColor1"
                    android:textSize="15dp" />

                <RatingBar
                    android:id="@+id/ratingBar_inMain_id"
                    style="@style/Base.Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/hall_id"
                    android:rating="5.0"
                    android:theme="@style/RatingBar2" />


            </RelativeLayout>


        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/semiTransparent3"
            app:cardCornerRadius="18dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/delete_btn_inMain_id"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/trash_can_delete_icon" />


            </RelativeLayout>


        </android.support.v7.widget.CardView>

    </RelativeLayout>


</RelativeLayout>