<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor1">


    <RelativeLayout
        android:id="@+id/card_view_r_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center">


        <RelativeLayout
            android:id="@+id/ratingBar_rLayout"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center">

            <RatingBar
                android:id="@+id/show_details_fragment_1_rating_bar_id"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="15dp"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="3.5"
                android:theme="@style/RatingBar2" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/location_rLayout_id"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/basic_info_location_icon"
                android:drawablePadding="5dp"
                android:text="Location"
                android:textColor="@color/colorWhite"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/show_details_fragment_1_location_text_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="SÃ¼dbloc"
                android:textColor="@color/colorWhite"
                android:textSize="25dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/show_details_fragment_1_location_text_id"
                android:background="@color/semiTransparent" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/date_rLayout_id"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/location_rLayout_id"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/basic_info_date_icon"
                android:drawablePadding="5dp"
                android:text="Date"
                android:textColor="@color/colorWhite"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/show_details_fragment_1_date_text_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="25. Okt. 2017"
                android:textColor="@color/colorWhite"
                android:textSize="25dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/show_details_fragment_1_date_text_id"
                android:background="@color/semiTransparent" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/start_rLayout_id"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/date_rLayout_id"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/basic_info_time"
                android:drawablePadding="5dp"
                android:text="Start"
                android:textColor="@color/colorWhite"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/show_details_fragment_1_start_text_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="11:30"
                android:textColor="@color/colorWhite"
                android:textSize="25dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/show_details_fragment_1_start_text_id"
                android:background="@color/semiTransparent" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/end_rLayout_id"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/start_rLayout_id"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/basic_info_time"
                android:drawablePadding="5dp"
                android:text="End"
                android:textColor="@color/colorWhite"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/show_details_fragment_1_end_text_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="13:30"
                android:textColor="@color/colorWhite"
                android:textSize="25dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/show_details_fragment_1_end_text_id"
                android:background="@color/semiTransparent" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/exp_rLayout_id"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/end_rLayout_id"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/basic_info_exp_icon"
                android:drawablePadding="5dp"
                android:text="Exp"
                android:textColor="@color/colorWhite"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/show_details_fragment_1_exp_text_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="15 EXP"
                android:textColor="@color/colorWhite"
                android:textSize="25dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/show_details_fragment_1_exp_text_id"
                android:layout_marginBottom="25dp"
                android:background="@color/semiTransparent" />

        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>