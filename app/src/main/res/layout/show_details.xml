<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <!-- Backgound -->

    <RelativeLayout
        android:id="@+id/header_background"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/background">


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/header_background"
        android:background="@color/colorBackground2" />

    <!-- Foreground -->


    <ScrollView
        android:id="@+id/scroll_view_SD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/scroll_view_rLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">


            <android.support.v7.widget.CardView
                android:id="@+id/details_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                app:cardBackgroundColor="@color/colorDark2"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:id="@+id/card_view_r_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/header_text"
                        android:layout_width="275dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="Eintrag #1"
                        android:textColor="@color/colorWhite"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:id="@+id/ratingBar_rLayout"
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/header_text"
                        android:gravity="center">

                        <RatingBar
                            android:id="@+id/ratingBarEntry"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="10dp"
                            android:isIndicator="true"
                            android:numStars="5"
                            android:rating="3.5"
                            android:theme="@style/RatingBar2" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/halle_rLayout"
                        android:layout_width="275dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/header_text"
                        android:layout_marginTop="40dp">

                        <TextView
                            android:id="@+id/text_halle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_location_on_black1_24dp"
                            android:text="Halle"
                            android:textColor="@color/colorWhite"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/text_halle_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="SÃ¼dbloc"
                            android:textColor="@color/colorWhite"
                            android:textSize="20dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@id/text_halle_value"
                            android:background="@color/semiTransparent" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/datum_rLayout"
                        android:layout_width="275dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/halle_rLayout"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/text_datum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_location_on_black1_24dp"
                            android:text="Datum"
                            android:textColor="@color/colorWhite"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/text_datum_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="20. Oktober 2017"
                            android:textColor="@color/colorWhite"
                            android:textSize="20dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@id/text_datum_value"
                            android:background="@color/semiTransparent" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/start_rLayout"
                        android:layout_width="275dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/datum_rLayout"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/text_start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_location_on_black1_24dp"
                            android:text="Start"
                            android:textColor="@color/colorWhite"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/text_start_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="11:30"
                            android:textColor="@color/colorWhite"
                            android:textSize="20dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@id/text_start_value"
                            android:background="@color/semiTransparent" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/ende_rLayout"
                        android:layout_width="275dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/start_rLayout"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/text_ende"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_location_on_black1_24dp"
                            android:text="Ende"
                            android:textColor="@color/colorWhite"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/text_ende_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="13:30"
                            android:textColor="@color/colorWhite"
                            android:textSize="20dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@id/text_ende_value"
                            android:background="@color/semiTransparent" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/erfahrung_rLayout"
                        android:layout_width="275dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ende_rLayout"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/text_erfahrung"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_location_on_black1_24dp"
                            android:text="Erfahrung"
                            android:textColor="@color/colorWhite"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/text_erfahrung_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="15 EXP"
                            android:textColor="@color/colorWhite"
                            android:textSize="20dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@id/text_erfahrung_value"
                            android:layout_marginBottom="25dp"
                            android:background="@color/semiTransparent" />

                    </RelativeLayout>


                </RelativeLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/chart_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/details_card_view"
                android:layout_marginTop="15dp"
                app:cardBackgroundColor="@color/colorDark2"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:id="@+id/chart_card_view_rLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.github.mikephil.charting.charts.HorizontalBarChart
                        android:id="@+id/horBarChart_01"
                        android:layout_width="match_parent"
                        android:layout_height="400dp">


                    </com.github.mikephil.charting.charts.HorizontalBarChart>


                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/rest_details_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/chart_card_view"
                android:layout_marginTop="15dp"
                app:cardBackgroundColor="@color/colorDark2"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:id="@+id/rest_details_rLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                </RelativeLayout>


            </android.support.v7.widget.CardView>


        </RelativeLayout>


    </ScrollView>


</RelativeLayout>




