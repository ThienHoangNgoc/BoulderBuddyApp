<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background3">


    <TextView
        android:id="@+id/newEntryHeader"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/semiTransparent"
        android:gravity="center"
        android:text="Neuer Eintrag"
        android:textColor="@color/colorWhite"
        android:textSize="30dp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/cancel_btn_nE"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/ic_arrow_back_black_24dp" />


    <ScrollView
        android:id="@+id/newEntrySV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/newEntryHeader"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <RelativeLayout
            android:id="@+id/r_layout_upper_part"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/test_autocomplete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/transparent"
                android:completionThreshold="1"
                android:drawableLeft="@drawable/ic_location_on_black_24dp"
                android:drawablePadding="12dp"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:hint="Halle"
                android:paddingLeft="10dp"
                android:popupBackground="@color/popUpTransparent"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/transparentWhite"
                android:textSize="25dp" />

            <View
                android:id="@+id/test_autocomplete_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/test_autocomplete"
                android:layout_marginTop="2dp"
                android:background="@color/transparentWhite" />


            <EditText
                android:id="@+id/nE_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/test_autocomplete_line"
                android:layout_marginTop="10dp"
                android:background="@color/transparent"
                android:drawableLeft="@drawable/ic_today_black_24dp"
                android:drawablePadding="12dp"
                android:focusable="false"
                android:hint="Datum"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/transparentWhite"
                android:textSize="25dp" />

            <View
                android:id="@+id/nE_date_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/nE_date"
                android:layout_marginTop="2dp"
                android:background="@color/transparentWhite" />

            <EditText
                android:id="@+id/nE_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/nE_date_line"
                android:layout_marginTop="10dp"
                android:background="@color/transparent"
                android:drawableLeft="@drawable/ic_access_time_black_24dp"
                android:drawablePadding="12dp"
                android:focusable="false"
                android:hint="Start"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/transparentWhite"
                android:textSize="25dp" />

            <View
                android:id="@+id/nE_start_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/nE_start"
                android:layout_marginTop="2dp"
                android:background="@color/transparentWhite" />

            <EditText
                android:id="@+id/nE_end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/nE_start_line"
                android:layout_marginTop="10dp"
                android:background="@color/transparent"
                android:drawableLeft="@drawable/ic_access_time_black_24dp"
                android:drawablePadding="12dp"
                android:focusable="false"
                android:hint="Ende"
                android:inputType="time"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/transparentWhite"
                android:textSize="25dp" />

            <View
                android:id="@+id/nE_end_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/nE_end"
                android:layout_marginTop="2dp"
                android:background="@color/transparentWhite" />


            <TextView
                android:id="@+id/Routen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/nE_end_line"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="Routen"
                android:textColor="@color/colorWhite"
                android:textSize="30dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/rLayout_verEasy"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/Routen"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/sehr_einfach"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:drawableLeft="@drawable/ic_star_black_24dp"
                    android:gravity="center"
                    android:text="Very Easy"
                    android:textColor="@color/colorWhite"
                    android:textSize="25dp" />

                <RelativeLayout
                    android:id="@+id/btn_rLayout_veryEasy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="30dp">

                    <Button
                        android:id="@+id/btn_minus"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_remove_circle_black_24dp" />

                    <EditText
                        android:id="@+id/vE_EdTex"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:layout_toRightOf="@id/btn_minus"
                        android:background="@color/transparent"
                        android:gravity="center"
                        android:inputType="number"
                        android:singleLine="true"
                        android:text="0"
                        android:textColor="@color/colorWhite"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/btn_plus"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_toRightOf="@id/vE_EdTex"
                        android:background="@drawable/ic_add_circle_black_24dp" />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rLayout_Easy"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/rLayout_verEasy"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/easy"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:drawableLeft="@drawable/ic_star_black_24dp"
                    android:gravity="center"
                    android:text="Easy"
                    android:textColor="@color/colorWhite"
                    android:textSize="25dp" />

                <RelativeLayout
                    android:id="@+id/btn_rLayout_Easy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="30dp">

                    <Button
                        android:id="@+id/btn_minus1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_remove_circle_black_24dp" />

                    <EditText
                        android:id="@+id/vE_EdTex1"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:layout_toRightOf="@id/btn_minus1"
                        android:background="@color/transparent"
                        android:gravity="center"
                        android:inputType="number"
                        android:singleLine="true"
                        android:text="0"
                        android:textColor="@color/colorWhite"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/btn_plus1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_toRightOf="@id/vE_EdTex1"
                        android:background="@drawable/ic_add_circle_black_24dp" />


                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/rating_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rLayout_Easy"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Zufriedenheit"
                android:textColor="@color/colorWhite"
                android:textSize="30dp" />

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@id/rating_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:numStars="5"
                android:rating="2.5"
                android:theme="@style/RatingBar" />

            <android.support.v7.widget.CardView
                android:id="@+id/nE_confirm_btn_cardV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ratingBar"
                android:layout_centerInParent="true"
                android:layout_marginTop="30dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="25dp"
                app:cardElevation="5dp">

                <Button
                    android:id="@+id/nE_confirm_btn"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:text="confirm"
                    android:textColor="@color/colorWhite" />

            </android.support.v7.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/nE_confirm_btn_cardV"
                android:layout_marginTop="30dp">


            </View>

        </RelativeLayout>


    </ScrollView>


</RelativeLayout>