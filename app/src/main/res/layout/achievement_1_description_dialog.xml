<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/appBackgroundColor"
    app:cardCornerRadius="20dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="270dp">

        <ImageView
            android:id="@+id/description_image_1_id"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/achievement_1_icon" />

        <TextView
            android:id="@+id/description_text_1_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/description_image_1_id"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="A New Journey"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/description_text_2_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/description_text_1_id"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Condition:"
            android:textColor="@color/colorWhite"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/description_text_2_id"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:text="Complete 1 Session"
            android:textColor="@color/colorWhite"
            android:textSize="15dp" />


    </RelativeLayout>


</android.support.v7.widget.CardView>