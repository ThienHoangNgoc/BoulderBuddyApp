<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="10dip" />
            <gradient
                android:angle="270"
                android:centerColor="@color/progressbarBackgroundColor"
                android:centerY="1.0"
                android:endColor="@color/progressbarBackgroundColor"
                android:startColor="@color/progressbarBackgroundColor" />

            <stroke
                android:width="1dp"
                android:color="@color/progressbarBackgroundColor" />
        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress"
        android:top="1dp"
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp">

        <scale android:scaleWidth="100%">
            <shape>
                <corners android:radius="10dip" />
                <gradient
                    android:angle="270"
                    android:centerColor="@color/progressbarColor"
                    android:centerY="1.0"
                    android:endColor="@color/progressbarColor"
                    android:startColor="@color/progressbarColor" />
            </shape>
        </scale>
    </item>
</layer-list>